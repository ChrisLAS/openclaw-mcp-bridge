{
  "id": "openclaw-mcp-bridge",
  "name": "MCP Bridge",
  "description": "Bridges MCP HTTP servers as native OpenClaw agent tools",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "properties": {
      "servers": {
        "type": "array",
        "description": "List of MCP servers to bridge",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Human-readable server name"
            },
            "url": {
              "type": "string",
              "description": "Base URL of the MCP HTTP server"
            },
            "prefix": {
              "type": "string",
              "description": "Prefix for tool names (e.g. 'notion' -> 'notion_search')"
            },
            "token": {
              "type": "string",
              "description": "Bearer token for authentication"
            },
            "path": {
              "type": "string",
              "description": "MCP endpoint path (defaults to '/mcp')"
            }
          },
          "required": ["name", "url", "prefix"]
        }
      },
      "tokenDbPath": {
        "type": "string",
        "description": "Path to the SQLite token database (defaults to ~/.openclaw/mcp-bridge-tokens.db)"
      }
    },
    "required": ["servers"]
  }
}
